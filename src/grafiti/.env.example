# FalkorDB Configuration
# Optional: Password for FalkorDB (leave empty if not password-protected)
FALKORDB_PASSWORD=
# Optional: Database name (defaults to "default_db")
FALKORDB_DATABASE=default_db

# LLM Provider API Keys (at least one required)
# Required for OpenAI LLM/embedder
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Other LLM providers
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
GROQ_API_KEY=

# Optional: Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_EMBEDDINGS_ENDPOINT=
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=
USE_AZURE_AD=false

# Optional: Embedder Providers
VOYAGE_API_KEY=

# Server Configuration
# Concurrency limit for episode processing (adjust based on LLM provider tier)
# Default: 10 (suitable for OpenAI Tier 3, mid-tier Anthropic)
# Tier 1 (free): 1-2, Tier 2: 5-8, Tier 3: 10-15, Tier 4: 20-50
SEMAPHORE_LIMIT=10

# Telemetry (optional)
GRAPHITI_TELEMETRY_ENABLED=true

# LLM Model Configuration
# Model name to use for entity extraction, deduplication, and summarization
# Examples:
#   OpenAI: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
#   Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229
#   Gemini: gemini-2.0-flash-exp, gemini-1.5-pro
#   Groq: llama-3.1-70b-versatile, mixtral-8x7b-32768
LLM_MODEL=gpt-4o-mini

# LLM Provider (openai, anthropic, gemini, groq, azure_openai)
LLM_PROVIDER=openai

# LLM Temperature (0.0-2.0, default: 0.0 for deterministic extraction)
LLM_TEMPERATURE=0.0

# Embedder Model Configuration
# Model for generating embeddings (semantic search)
# Examples:
#   OpenAI: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
#   Voyage: voyage-large-2, voyage-3
#   Sentence Transformers: all-MiniLM-L6-v2, all-mpnet-base-v2
EMBEDDER_MODEL=text-embedding-3-small

# Embedder Provider (openai, azure_openai, gemini, voyage, sentence_transformers)
EMBEDDER_PROVIDER=openai
